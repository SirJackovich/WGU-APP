<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.example.sirjackovich.wguapp">

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme">
    <activity android:name=".MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name=".AssessmentActivity"
      android:label="@string/title_activity_assessment"
      android:parentActivityName=".MainActivity">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".MainActivity" />
    </activity>
    <activity
      android:name=".AssessmentDetailsActivity"
      android:label="@string/assessment_details_text"
      android:parentActivityName=".AssessmentActivity">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".AssessmentActivity" />
    </activity>

    <provider
      android:name=".AssessmentsProvider"
      android:authorities="com.example.sirjackovich.assessmentprovider"
      android:exported="false" />

  </application>

</manifest>
